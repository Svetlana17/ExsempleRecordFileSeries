        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="" />

    <TextView
        android:id="@+id/filtrKomY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="" />

    <TextView
        android:id="@+id/filtrKomZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:textSize="20sp"
        android:text="" />


</LinearLayout>